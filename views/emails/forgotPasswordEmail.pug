extends baseEmail

block content
    p Hi #{firstName},
        p You recently requested for a password reset. Click on the link below to reset you password (Only valid for the next 10 minutes).
        p= url
        table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td(align='left')
                        table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                            tbody
                                tr
                                    td
                                        a(href=`${url}`, target='_blank') Reset Your Password
        p Kindly ignore this mail if you didn't request for a password reset.
